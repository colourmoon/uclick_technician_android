<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="18dp"
    android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/custom_orderId"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Order Id:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colororange"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
           android:gravity="end"/>
    <TextView
        android:id="@+id/custom_orderId_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="231099776555"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colororange"
        android:layout_marginTop="30dp"
        android:gravity="start" />
</LinearLayout>

        <ImageView
            android:id="@+id/custom_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/order_success_image"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/custom_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work Completed Successfully"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/custome_home"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="GO TO HOME"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:background="@drawable/addbutton_bg"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</LinearLayout>